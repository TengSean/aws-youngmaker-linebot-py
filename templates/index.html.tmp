<body>
    <h1>Hello world!</h1>
<!--     <script src="https://static.line-scdn.net/liff/edge/2.7.1/sdk.js"></script> -->
    <script src="https://static.line-scdn.net/liff/edge/versions/2.7.1/sdk.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <script>
            function initializeApp() {
                // check if the user is logged in/out, and disable inappropriate button
                if (liff.isLoggedIn()) {
                        ;// login
                    if (!liff.isInClient()) {
                        ;//login with external website.
                    }
                } else {
                    liff.login();
                }
            }
            const initializeLiff=(myLiffId)=> {
                return new Promise((resolve, reject) =>{
                    liff
                        .init({
                            liffId: myLiffId
                        })
                        .then(() => {
                            // start to use LIFF's api
                            initializeApp();
                            resolve();
                        })
                        .catch((err) => {
                            // alert(err);
                            reject();
                        });
                });
            }
            window.onload = function() {
                initializeLiff('1654880272-OwjwXaXD');
                setTimeout(async function(){ 
                    const queryString = window.location.search;
                    const urlParams = new URLSearchParams(queryString);
                    const mode = urlParams.get('mode');
                    const course = urlParams.get('course');
                    // alert(mode)
                    if (mode == 'share'){
                        // alert('start share target');
                        if (liff.isApiAvailable('shareTargetPicker')) {
                            const result = await liff.shareTargetPicker([
                                    {
                            "type": "flex",
                            "altText": "Flex Message",
                            "contents": {
                                "type": "bubble",
                                "body": {
                                "type": "box",
                                "layout": "vertical",
                                "spacing": "md",
                                "contents": [
                                    {
                                    "type": "text",
                                    "text": "幼兒園積木班",
                                    "size": "xl",
                                    "gravity": "center",
                                    "weight": "bold",
                                    "wrap": true
                                    },
                                    {
                                    "type": "box",
                                    "layout": "vertical",
                                    "spacing": "sm",
                                    "margin": "lg",
                                    "contents": [
                                        {
                                        "type": "box",
                                        "layout": "baseline",
                                        "spacing": "sm",
                                        "contents": [
                                            {
                                            "type": "text",
                                            "text": "Date",
                                            "flex": 1,
                                            "size": "sm",
                                            "color": "#AAAAAA"
                                            },
                                            {
                                            "type": "text",
                                            "text": "每週一17:00-18:30",
                                            "flex": 4,
                                            "size": "sm",
                                            "color": "#666666",
                                            "wrap": true
                                            }
                                        ]
                                        },
                                        {
                                        "type": "box",
                                        "layout": "baseline",
                                        "spacing": "sm",
                                        "contents": [
                                            {
                                            "type": "text",
                                            "text": "Place",
                                            "flex": 1,
                                            "size": "sm",
                                            "color": "#AAAAAA"
                                            },
                                            {
                                            "type": "text",
                                            "text": "渴望一路176號",
                                            "flex": 4,
                                            "size": "sm",
                                            "color": "#666666",
                                            "wrap": true
                                            }
                                        ]
                                        },
                                        {
                                        "type": "box",
                                        "layout": "vertical",
                                        "margin": "xxl",
                                        "contents": [
                                            {
                                            "type": "spacer"
                                            },
                                            {
                                                "type": "button",
                                                "style": "link",
                                                "height": "sm",
                                                "action": {
                                                "type": "uri",
                                                "label": "check detail",
                                                "uri": "https://liff.line.me/1654880272-OwjwXaXD/?mode=detail&course=apple"
                                                },
                                            },
                                            {
                                            "type": "text",
                                            "text": "You can enter the theater by using this code instead of a ticket",
                                            "margin": "xxl",
                                            "size": "xs",
                                            "color": "#AAAAAA",
                                            "wrap": true
                                            }
                                        ]
                                        }
                                    ]
                                    }
                                ]
                                }
                            }
                            }
                            ]);
                            
                            if (result) {
                                alert(`[${result.status}] Message sent!`)
                            } else {
                                const [majorVer, minorVer, patchVer] = (liff.getLineVersion() || "").split('.');

                                if (minorVer === undefined) {
                                    alert('ShareTargetPicker was canceled in external browser')
                                    return
                                }
                                if (parseInt(majorVer) >= 10 && parseInt(minorVer) >= 10 && parseInt(patchVer) > 0) {
                                    alert('ShareTargetPicker was canceled in LINE app')
                                }
                            }
                        } else{
                            // alert("can't use sharetargetpicker.")
                        }
                    }else if( mode == 'detail'){
                        liff.getProfile().then(function(profile) {
                            $.ajax({
                                type : "GET",
                                url : '/email_process',
                                dataType: "json",
                                data: { ID: profile.userId},
                                contentType: 'application/json;charset=UTF-8',
                                success: function (data) {
                                    // alert(data);
                                }
                            });

                        }).catch(function(error) {
                            // window.alert('Error getting profile: ' + error);
                        });

                    }else{
                        // alert('error');
                    }
                },1000);
                // });
            }
        </script>
</body>

